@{
    ViewData["Title"] = "Saving Plan";
}
@model IEnumerable<SavingPlan>
<style>
    .custom-swal-size {
        width: 400px; /* Adjust the width as needed */
        height: 150px;
        font-size: 12px; /* Adjust the font size as needed */
        /* Add any other styling you want */
    }
</style>
<!-- [ Main Content ] start -->
<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="d-sm-flex align-items-center justify-content-between">
                    <h3 class="mb-3 mb-sm-0">Saving Plan list</h3>
                    <div>
                        <a href="@Url.Action("Create")" class="btn btn-primary">Add Saving Plan</a>
                        <a href="@Url.Action("Credit")" class="btn btn-primary">Interest Credit</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-between ali mb-3 g-3">
                    <div class="col-sm-auto">
                        <form class="form-search">
                            <i class="ph-duotone ph-magnifying-glass icon-search"></i>
                            <input type="search" class="form-control" placeholder="Search..." />
                            <button class="btn btn-light-secondary btn-search">Search</button>
                        </form>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>Account No</th>
                                <th>Plan Type</th>
                                <th>Interest Rate(%)</th>
                                <th>Duration(Month)</th>
                                <th>Amount</th>
                                <th>Maturity Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sl = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.AccountNo</td>
                                    <td>@item.PlanType</td>
                                    <td>@item.InterestRate</td>
                                    <td>@item.DurationMonths</td>
                                    <td>@item.PrincipalAmount</td>
                                    <td style="color:red"><strong>@Convert.ToDateTime(item.MaturityDate).ToString("dd-MM-yyyy")</strong></td>
                                    
                                </tr>
                                sl++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->

</div>
<script src="~/assets/js/jquery-3.6.1.min.js"></script>
<script src="~/assets/js/sweetalert2.js"></script>
<script>
</script>